<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="capstone.android.MainActivity">
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:text="사진찍기"
        android:onClick="onClick_cam"
        android:id="@+id/btn_cam"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:id="@+id/btn_gallery"
        android:onClick="onClick_gallery"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="사진 가져오기"
        android:layout_alignBaseline="@+id/btn_cam"
        android:layout_alignBottom="@+id/btn_cam"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/btn_gallery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="onClick_change"
        android:text="변환하기 | 편집하기" />
</RelativeLayout>